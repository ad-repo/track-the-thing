{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Track the Thing",
  "version": "0.1.0",
  "identifier": "com.trackthething.desktop",
  "build": {
    "frontendDist": "../../../frontend/dist",
    "devUrl": "http://127.0.0.1:5174",
    "beforeDevCommand": "./scripts/run_frontend_dev.sh",
    "beforeBuildCommand": "./scripts/run_frontend_build.sh"
  },
  "app": {
    "macOSPrivateApi": false,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Track the Thing",
        "label": "main",
        "width": 1280,
        "height": 860,
        "visible": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "dragDropEnabled": false,
        "devtools": true,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "bin"
    ],
    "macOS": {
      "infoPlist": "Info.plist"
    }
  }
}
